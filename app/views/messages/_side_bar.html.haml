.wrapper__side-bar

  .wrapper__side-bar__top
    .wrapper__side-bar__top__box
      .wrapper__side-bar__top__box__name
        = current_user.name
      .wrapper__side-bar__top__box__icons
        = link_to new_group_path, class: "side-icons" do
          = icon('fa', 'edit', class: "new-group")
        = link_to edit_user_path(current_user), class: "side-icons" do
          = icon('fa', 'cog', class: "edit-account")

  .wrapper__side-bar__group-list
    - current_user.groups.each do |group|
      .wrapper__side-bar__group-list__groups
        = link_to group_messages_path(group) do
          .wrapper__side-bar__group-list__groups__name
            = group.name
          .wrapper__side-bar__group-list__groups__message
            = group.show_last_message