.wrapper__main-chat__message-list__upper-messages
  .wrapper__main-chat__message-list__upper-messages__name
    = message.user.name
  .wrapper__main-chat__message-list__upper-messages__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")

.wrapper__main-chat__message-list__lower-messages
  - if message.content.present?
    %p.lower-messages__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?